<?xml version="1.0" encoding="utf-8"?>
<com.byodl.widgets.CheckableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/checkable_bg"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.byodl.widgets.RatioFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:auto_adjust="adjust_height"
            app:width_height_ratio="1">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_photo_white_48dp"/>
        </com.byodl.widgets.RatioFrameLayout>

        <TextView
            android:id="@+id/labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="@dimen/history_text_size"/>
    </LinearLayout>
</com.byodl.widgets.CheckableFrameLayout>