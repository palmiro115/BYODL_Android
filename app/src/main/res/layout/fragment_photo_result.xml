<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical"
              tools:context="com.byodl.activities.home.fragments.PredictResultFragment">

    <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close_white_36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:layout_gravity="end"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dlg_padding_h"
            android:paddingRight="@dimen/dlg_padding_h"
            android:paddingStart="@dimen/dlg_padding_h"
            android:paddingEnd="@dimen/dlg_padding_h"
            android:paddingBottom="16dp">
        <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/predict_result_image_size"
                android:layout_height="@dimen/predict_result_image_size"
                android:layout_marginRight="@dimen/widget_margin_h"
                app:srcCompat="@drawable/ic_photo_white_48dp"
                android:scaleType="center"
                android:layout_marginEnd="@dimen/widget_margin_h"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="@dimen/dlg_padding_h"
            android:paddingRight="@dimen/dlg_padding_h"
            android:paddingStart="@dimen/dlg_padding_h"
            android:paddingEnd="@dimen/dlg_padding_h"
            android:paddingBottom="16dp">
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="@dimen/buttons_width"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    style="@style/ButtonWhite"
                    android:layout_gravity="center"/>

        </FrameLayout>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="@dimen/buttons_width"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    style="@style/ButtonTransparent"
                    android:layout_gravity="center"/>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
